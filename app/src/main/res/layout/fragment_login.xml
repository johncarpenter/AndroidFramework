<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/edit_email"
            android:layout_marginLeft="@dimen/content_margins"
            android:layout_marginRight="@dimen/content_margins"
            android:layout_marginBottom="@dimen/content_margins_half"
            android:layout_marginTop="@dimen/content_margins_half"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:hint="@string/login_fragment_email"
            android:nextFocusDown="@+id/edit_password"
            android:nextFocusForward="@+id/edit_password"
            android:imeOptions="actionNext"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_password"
            android:layout_marginLeft="@dimen/content_margins"
            android:layout_marginRight="@dimen/content_margins"
            android:layout_marginBottom="@dimen/content_margins_half"
            android:layout_marginTop="@dimen/content_margins_half"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="@string/login_fragment_password"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/button_login"
            android:layout_marginLeft="@dimen/content_margins"
            android:layout_marginRight="@dimen/content_margins"
            android:layout_marginBottom="@dimen/content_margins_half"
            android:layout_marginTop="@dimen/content_margins_half"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pal_button"
            android:text="@string/login_fragment_button" />

        <TextView
            android:id="@+id/text_forgot_password"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="?android:textAppearanceMedium"
            android:bufferType="spannable"
            android:text="@string/login_password_forgot"
            android:layout_margin="@dimen/content_margins_half"/>

    </LinearLayout>



</LinearLayout>