<resources>

    <!-- Toolbar -->
    <style name="BaseApplication.Toolbar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@color/pal_white</item>
        <item name="android:textColorSecondary">@color/pal_white</item>
        <item name="titleTextColor">@color/pal_primary_light</item>
        <item name="subtitleTextColor">@color/pal_secondary_light</item>
        <item name="colorControlNormal">@color/pal_primary_light</item>

        <item name="android:popupBackground">@color/pal_white</item>
        <item name="android:colorBackground">@color/pal_white</item>

    </style>


    <!-- UI Element Styles -->
    <style name="BaseApplication.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/spacing_double</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:minHeight">@dimen/button_min_size</item>
        <item name="android:minWidth">@dimen/button_min_size</item>
    </style>

    <style name="BaseApplication.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/spacing_double</item>
        <item name="android:minHeight">@dimen/button_min_size</item>
        <item name="android:minWidth">@dimen/button_min_size</item>
    </style>


    <!-- Text Styling -->
    <style name="BaseApplication.TextStyle.List.Caption" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?android:attr/textColorHighlight</item>
        <item name="android:layout_marginTop">-2dp</item>
        <item name="android:textSize">@dimen/text_size_med</item>
    </style>

    <style name="BaseApplication.TextStyle.List.Title" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_lrg</item>
    </style>

</resources>
