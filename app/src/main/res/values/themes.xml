<resources>

    <style name="BaseApplication" parent="BaseApplication.App"></style>

    <!-- Base application theme. -->
    <style name="BaseApplication.App" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- ActionBar Background -->
        <item name="colorPrimary">@color/pal_4</item>
        <!-- System Notification Bar -->
        <item name="colorPrimaryDark">@color/pal_5</item>

        <item name="colorAccent">@color/pal_2</item>

        <item name="android:textColor">@color/pal_grey_6</item>
        <item name="android:textColorPrimary">@color/pal_grey_6</item>
        <item name="android:textColorPrimaryInverse">@color/pal_grey_6</item>
        <item name="android:textColorSecondary">@color/pal_grey_6</item>
        <item name="android:textColorHighlight">@color/pal_white</item>

        <item name="android:windowBackground">@color/pal_grey_1</item>

        <!-- Window Setup -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>

        <!-- Widget Styles -->
        <item name="vpiTitlePageIndicatorStyle">@style/BaseApplication.TitlePageIndicator</item>
        <item name="android:buttonStyle">@style/BaseApplication.ButtonFlat</item>

    </style>

</resources>
